    #     # Include the same location blocks as above
    #     location /api/auth/ {
    #         proxy_pass http://auth_service;
    #         # ... same proxy settings as above
    #     }
    #
    #     location /api/user/ {
    #         proxy_pass http://permissions_service;
    #         # ... same proxy settings as above
    #     }
    #
    #     location /api/ {
